<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/movie_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="false">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#efefef"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/main_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff">

                        <TextView
                            android:id="@+id/title_tt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:text="Title:"
                            android:layout_marginRight="5dp"
                            android:textColor="#727272"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:gravity="left"
                            android:layout_toRightOf="@id/title_tt"
                            android:text=""
                            android:textColor="#727272"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/comment_tt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="3dp"
                            android:text="Comment:"
                            android:layout_marginRight="5dp"
                            android:textColor="#727272"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/comment_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#ffffff"
                            android:gravity="left"
                            android:layout_toRightOf="@id/comment_tt"
                            android:lineSpacingMultiplier="1.2"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="1dp"
                            android:text=""
                            android:textColor="#727272"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/full_rounded_white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="1dp"
                            android:background="#ffffff"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/name_tt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="3dp"
                                android:text="Name:"
                                android:layout_marginRight="5dp"
                                android:textColor="#727272"
                                android:textSize="16dp" />
                            <TextView
                                android:id="@+id/name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:layout_toRightOf="@id/name_tt"
                                android:background="#ffffff"
                                android:text=""
                                android:textColor="#6d6d6d"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="38dp"
                            android:background="#ffffff"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/usefulness_tt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="12dp"
                                android:text="Usefullness:"
                                android:layout_marginRight="5dp"
                                android:textColor="#727272"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/usefulness_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="#ffffff"
                                android:gravity="left"
                                android:layout_toRightOf="@id/usefulness_tt"
                                android:text=""
                                android:textColor="#6d6d6d"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff">

                        <TextView
                            android:id="@+id/ratings_tt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:text="Ratings"
                            android:layout_marginRight="5dp"
                            android:textColor="#727272"
                            android:textSize="16dp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:background="#ffffff"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff">

                        <TextView
                            android:id="@+id/rating_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:text="Overall:"
                            android:textColor="#727272"
                            android:textSize="16dp" />

                        <RatingBar
                            android:id="@+id/rating_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="2dp"
                            />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/show_rl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="57dp"

                    android:background="#ffffff"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff">

                        <TextView
                            android:id="@+id/delivery_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:text="Delivery:"
                            android:textColor="#727272"
                            android:textSize="16dp" />

                        <RatingBar
                            android:id="@+id/delivery_time_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="2dp"
                            />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="57dp"

                    android:background="#ffffff"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff">

                        <TextView
                            android:id="@+id/discounts_and_offers_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:text="Offers:"
                            android:textColor="#727272"
                            android:textSize="16dp" />

                        <RatingBar
                            android:id="@+id/discounts_and_offers_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="2dp"
                            />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="57dp"

                    android:background="#ffffff"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff">

                        <TextView
                            android:id="@+id/packaging_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:text="packing:"
                            android:textColor="#727272"
                            android:textSize="16dp" />

                        <RatingBar
                            android:id="@+id/packaging_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="2dp"
                            />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                    </LinearLayout>
                </FrameLayout>
                <Button
                    android:id="@+id/show_more_butt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Show More"
                    android:background="#FF4081"
                    android:visibility="visible"
                    android:shadowColor="@color/colorPrimary"/>
                <Button
                    android:id="@+id/show_less_butt"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="30dp"
                    android:text="Show Less"
                    android:background="#FF4081"
                    android:shadowColor="@color/colorPrimary"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />

            </LinearLayout>

        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.v7.widget.CardView>